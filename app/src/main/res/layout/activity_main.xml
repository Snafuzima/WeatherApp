<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_border"
    tools:context=".MainActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_forfor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_txt_forfor" />

    <TextView
        android:id="@+id/txt_for_homework"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_example_long"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_for_homework"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_txt" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_for_homework_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_txt_two" />

</LinearLayout>